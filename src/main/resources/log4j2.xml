<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="OFF" monitorInterval="300">
	<!-- 修改status看影响 -->
	<properties>
		<!-- <property name="filenameLog">logs/info.log</property> -->
		<!-- <property name="booklistFilenameLog">/Users/liufeng/yuewen/booklist/activeusers/logs/info.log</property> -->
		<property name="booklistFilenameLog">${sys:datasync.booklist:-${sys:user.home}/yuewen/booklist/activeusers/logs}</property>
	</properties>

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout charset="UTF-8"
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>

		<RollingFile name="booklistInfoLog" fileName="${booklistFilenameLog}/info.log"
			filePattern="${booklistFilenameLog}/$${date:yyyy-MM}/info-%d{yyyy-MM-dd}-%i.log.gz">

			<Filters>
				<ThresholdFilter level="warn" onMatch="DENY"
					onMismatch="NEUTRAL" />
				<ThresholdFilter level="info" onMatch="ACCEPT"
					onMismatch="DENY" />
			</Filters>

			<PatternLayout>
				<Charset>UTF-8</Charset>
				<Pattern>%d{HH:mm:ss.SSS} %p %c [%t] %m%n</Pattern>
			</PatternLayout>

			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
				<SizeBasedTriggeringPolicy size="100 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20" />

		</RollingFile>

		<RollingFile name="booklistErrorLog" fileName="${booklistFilenameLog}/error.log"
			filePattern="${booklistFilenameLog}/$${date:yyyy-MM}/error-%d{yyyy-MM-dd}-%i.log.gz">

			<Filters>
				<ThresholdFilter level="warn" onMatch="ACCEPT"
					onMismatch="DENY" />
			</Filters>

			<PatternLayout>
				<Charset>UTF-8</Charset>
				<Pattern>%d{HH:mm:ss.SSS} %p %c [%t] %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
				<SizeBasedTriggeringPolicy size="100 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20" />

		</RollingFile>

		<RollingFile name="booklistWarnLog" fileName="${booklistFilenameLog}/warn.log"
			filePattern="${booklistFilenameLog}/$${date:yyyy-MM}/warn-%d{yyyy-MM-dd}-%i.log.gz">

			<Filters>
				<ThresholdFilter level="info" onMatch="ACCEPT"
					onMismatch="DENY" />
			</Filters>

			<PatternLayout>
				<Charset>UTF-8</Charset>
				<Pattern>%d{HH:mm:ss.SSS} %p %c [%t] %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
				<SizeBasedTriggeringPolicy size="100 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20" />

		</RollingFile>
	</Appenders>

	<Loggers>
		<Root level="debug">
			<AppenderRef ref="Console" />
		</Root>

		<Logger name="com.dancer.provalidation.number" level="warn"
			additivity="false">
			<AppenderRef ref="booklistWarnLog" />
		</Logger>

		<AsyncLogger name="com.dancer.provalidation.log" level="info"
			includeLocation="true" additivity="false">
			<AppenderRef ref="booklistInfoLog" />
			<AppenderRef ref="booklistErrorLog" />
		</AsyncLogger>
	</Loggers>
</Configuration>